@model AdminControl.Models.UserViewModel
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head {
    @Styles.Render("~/Content/checkbox_datepicker")
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>Edit User Profile</h3>
            </div>
            <div class="hpanel hgreen">
                <div class="panel-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="hpanel hbgred animated fadeInLeft">
                            <div class="panel-body">
                                <div class="text-center">
                                    <h2>Warning!</h2>
                                    <h3>
                                        @ViewBag.Error
                                    </h3>
                                </div>
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label class="control-label">Username</label>
                                @Html.TextBoxFor(u => u.username, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="control-label">First Name</label>
                                @Html.TextBoxFor(u => u.firstName, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="control-label">Last Name</label>
                                @Html.TextBoxFor(u => u.lastName, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="control-label">Email Address</label>
                                @Html.TextBoxFor(u => u.email, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="control-label">Phone Number</label>
                                @Html.TextBoxFor(u => u.phoneNumber, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="control-label">Birthday</label>
                                <div class="input-group date">
                                    @Html.TextBoxFor(u => u.birthday, new { @class = "form-control" })
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-th"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="control-label">Address</label>
                                @Html.TextBoxFor(u => u.address, new { @class = "form-control" })
                            </div>

                            @{
                                List<SelectListItem> listItems = new List<SelectListItem>();
                                listItems.Add(new SelectListItem
                                {
                                    Text = "Admin",
                                    Value = "Admin"
                                });
                                listItems.Add(new SelectListItem
                                {
                                    Text = "Manager",
                                    Value = "Manager",
                                    Selected = true
                                });
                                listItems.Add(new SelectListItem
                                {
                                    Text = "Shipper",
                                    Value = "Shipper"
                                });
                            }

                            <div class="form-group col-lg-6">
                                <label class="control-label">Role</label>
                                @Html.DropDownListFor(u => u.role, listItems, new { @class = "form-control"})
                            </div>
                            <div class="form-group col-lg-6">
                                <p style="font-weight:bold">Gender</p>
                                <div class="radio radio-info radio-inline">
                                    @Html.RadioButtonFor(u => u.isMale, true, new { @id = "inlineRadio1" })
                                    <label id="inlineRadio1">Male</label>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.RadioButtonFor(u => u.isMale, false, new { @id = "inlineRadio2" })
                                    <label id="inlineRadio2">Female</label>
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="control-label">Password</label>
                                @Html.PasswordFor(u => u.password, new { @class = "form-control" })
                            </div>

                        </div>
                        <div class="text-center">
                            <button class="btn btn-success" type="submit" style="width: 40%">SUBMIT</button>
                            <button class="btn btn-danger" style="width: 40%">BACK TO DASHBOARD</button>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/Scripts/checkbox_datepicker", "~/Scripts/datePopUp.js")
}