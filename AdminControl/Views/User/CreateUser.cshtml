@model AdminControl.Models.UserViewModel
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>Create New User</h3>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="hpanel hbgred animated fadeInLeft">
                            <div class="panel-body">
                                <div class="text-center">
                                    <h2>Warning!</h2>
                                    <h3>
                                        @ViewBag.Error
                                    </h3>
                                </div>
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Username</label>
                                @Html.TextBoxFor(u => u.username, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>First Name</label>
                                @Html.TextBoxFor(u => u.firstName, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Last Name</label>
                                @Html.TextBoxFor(u => u.lastName, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Password</label>
                                @Html.PasswordFor(u => u.password, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Email Address</label>
                                @Html.TextBoxFor(u => u.email, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Birthday</label>
                                <div class="input-group date">
                                    @Html.TextBoxFor(u => u.birthday, new { @class = "form-control" })
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-th"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <p style="font-weight:bold">Gender</p>
                                <div class="radio radio-info radio-inline">
                                    @Html.RadioButtonFor(u => u.isMale, true, new { @id = "inlineRadio1" })
                                    <label id="inlineRadio1">Male</label>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.RadioButtonFor(u => u.isMale, false, new { @id = "inlineRadio2" })
                                    <label id="inlineRadio2">Female</label>
                                </div>
                            </div>

                        </div>
                        <div class="text-center">
                            <button class="btn btn-success" type="submit" style="width: 40%">REGISTER</button>
                            <a class="btn btn-danger" href="@Url.Action("UserList", "User")" style="width: 40%">BACK TO DASHBOARD</a>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
