
@model AdminControl.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Page title -->
    <title>HOMER | WebApp admin theme</title>

    <!-- Vendor styles -->
    <link rel="stylesheet" href="~/Content/vendor/fontawesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/vendor/metisMenu/dist/metisMenu.css" />
    <link rel="stylesheet" href="~/Content/vendor/animate.css/animate.css" />
    <link rel="stylesheet" href="~/Content/vendor/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/vendor/sweetalert/lib/sweet-alert.css" />
    <link rel="stylesheet" href="~/Content/vendor/toastr/build/toastr.min.css" />

    <!-- App styles -->
    <link rel="stylesheet" href="~/fonts/pe-icon-7-stroke/css/pe-icon-7-stroke.css" />
    <link rel="stylesheet" href="~/fonts/pe-icon-7-stroke/css/helper.css" />
    <link rel="stylesheet" href="~/Content/styles/style.css">

</head>
<body class="blank">

    <!-- Simple splash screen-->
    <div class="splash"> <div class="color-line"></div><div class="splash-title"><h1>Homer - Responsive Admin Theme</h1><p>Special AngularJS Admin Theme for small and medium webapp with very clean and aesthetic style and feel. </p><img src="images/loading-bars.svg" width="64" height="64" /> </div> </div>

    <div class="color-line"></div>

    <div class="back-link">
        <a href="index-2.html" class="btn btn-primary">Back to Dashboard</a>
    </div>

    <div class="login-container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center m-b-md">
                    <h3>PLEASE LOGIN TO APP</h3>
                    <small>This is the best app ever!</small>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="hpanel hbgred animated fadeInLeft">
                        <div class="panel-body">
                            <div class="text-center">
                                <h3>Warning</h3>
                                <h4>
                                    @ViewBag.Message
                                </h4>
                            </div>
                        </div>
                    </div>
                }
                <div class="hpanel">
                    <div class="panel-body">
                        @using (Ajax.BeginForm("Login", "Account", new AjaxOptions { UpdateTargetId = "result" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="control-label" for="username">Username</label>
                                @Html.TextBoxFor(u => u.username, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="password">Password</label>
                                @Html.PasswordFor(u => u.password, new { @class = "form-control" })
                            </div>
                            <div class="checkbox">
                                @Html.CheckBoxFor(u => u.rememberMe, new { @class = "i-checks" })
                                Remember login

                            </div>
                            <button class="btn btn-success btn-block alerts" type="submit">LOGIN</button>
                            <a class="btn btn-primary2 btn-block" href="@Url.Action("Register", "Account")">REGISTER</a>

                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <strong>MOBILESHOP</strong> - Admin Page Responsive WebApp <br /> 2015 Copyright Company Name
            </div>
        </div>
    </div>


    <!-- Vendor scripts -->
    <script src="~/Content/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/vendor/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Content/vendor/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Content/vendor/metisMenu/dist/metisMenu.min.js"></script>
    <script src="~/Content/vendor/iCheck/icheck.min.js"></script>
    <script src="~/Content/vendor/sparkline/index.js"></script>
    <script src="~/Content/vendor/sweetalert/lib/sweet-alert.min.js"></script>
    <script src="~/Content/vendor/toastr/build/toastr.min.js"></script>

    <!-- App scripts -->
    <script src="~/Scripts/homer.js"></script>

</body>
</html>