@using AdminControl.Models
@model List<NewsViewModel>
@{
    ViewBag.Title = "NewsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content animate-panel">
        @foreach (NewsViewModel n in Model)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="hpanel hgreen">
                        <div class="panel-heading hbuilt">
                            <div class="panel-tools">
                                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                <a class="closebox"><i class="fa fa-times"></i></a>
                            </div>
                            @n.title
                        </div>
                        <div class="panel-body">
            
                                @Html.Raw(n.content)

                        </div>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-xs-6">
                                    <a href="@Url.Action("EditNews", "News", new { id = n.newsId })" class="btn btn-block btn-success btn-sm"><i class="fa fa-edit"></i>&nbsp;EDIT</a>
                                </div>
                                <div class="col-xs-6">
                                    <a href="@Url.Action("DeleteNews", "News", new { id = n.newsId })" class="btn btn-block btn-danger btn-sm"><i class="fa fa-trash"></i>&nbsp;Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>
