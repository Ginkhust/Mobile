@using AdminControl.Models
@model List<UserViewModel>
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel hgreen">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    <h3 style="font-weight:bold">Manage Customer Profile</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table cellpadding="1" cellspacing="1" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Gender</th>
                                    <th>Birthday</th>
                                    <th>Control</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (UserViewModel uvm in Model)
                                {
                                    <tr>
                                        <td>@uvm.username</td>
                                        <td>@uvm.firstName</td>
                                        <td>@uvm.lastName</td>
                                        <td>@uvm.email</td>
                                        <td>@uvm.phoneNumber</td>
                                        <td>@uvm.address</td>
                                        <td>@uvm.gender</td>
                                        <td>@uvm.birthday</td>
                                        <td><a href="@Url.Action("DeleteCustomer", "Customer", new { id = uvm.userId })" class="btn btn-block btn-sm btn-danger"><i class="fa fa-trash"></i>&nbsp;DELETE</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="panel-footer">
                    Table - @Model.Count rows
                </div>
            </div>
        </div>
    </div>
</div>